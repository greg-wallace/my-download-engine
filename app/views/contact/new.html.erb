<% provide(:title, 'Contact') %>
<div class="container">
	
	<div class="page-header"><h1>Contact Us</h1>

		<h2>Some sub-text could go
			here</h2></div>

			<div class="row">
				<div class="span7">
					<div class="well-light">

						<%= form_for @message, :url => contact_path, html: {class: 'form-horizontal'} do |form| %>
						<fieldset class="fields">

							<legend>Your information</legend>

							<div class="control-group"> <%= form.label :name, class: 'control-label' %>
								<div class="controls"> <%= form.text_field :name,
								class: 'span3' %> </div>
							</div>

							<div class="control-group"> <%= form.label :email, class: 'control-label' %>
								<div class="controls"> <%= form.text_field :email,
								class: 'span3' %> </div>
							</div>

							<div class="control-group"> <%= form.label :subject, class: 'control-label' %>
								<div class="controls"> <%= form.text_field :subject , rows: '3' , class: 'span3' %> </div>
							</div>

							<legend>Your message</legend>

						 <div class="field">
						      <%= form.label :body %>
						      <%= form.text_area :body ,  %>
						    </div>
						</fieldset>

						<fieldset class="form-actions"> <%= form.submit "Send it now!", class: "span3 btn btn-large btn-primary" %> </fieldset>
						<p class="quiet-text">If you're unsatisfied with Hacker Engine for any reason, we'll happily refund your
							money.</p>

							<p
							class="quiet-text">Got questions that aren't answered
							here? <%= mail_to 'support@hackerengine.com', 'Email us' %>, or ask on <%=
							link_to 'twitter', 'http://twitter.com/hackerengine' %>.</p>

							<% end %> </div>
						</div>

